extends ../layouts/base.pug

block styles 
    //- Open Graph Tags
    meta(name="og:title", content="IITM - Campus")
    meta(name="og:description", content="Discover academic excellence at Iqbal Institute of Technology and Management. Specializing in Computer Science and Management, our curriculum empowers students with essential knowledge and skills for dynamic careers. Join us for a transformative academic journey.")
    meta(name="og:image" content=bannerImg)

