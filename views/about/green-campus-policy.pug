extends ../layouts/base.pug

block content
    include ../layouts/banner.pug

    main.page-layout 
        include ../layouts/pagemenu.pug

        .main
            div
                h1.page-heading Green Campus Policy

                .line-above-heading
                h2.heading-with-top-border Explore

                iframe.pdf-viewer.hidden(src="/data/documents/green-campus-policy.pdf")
                .pdf.margin-top-sm.hidden
                    .pdf__heading
                    .pdf__container
                    .pdf__download
                        a(href="/data/documents/green-campus-policy.pdf" target="_blank")
                            button Download

    script.
        //- Show pdf using pdfJs function defined in base.pug script.(For small devies)
        pdfJs(["/data/documents/green-campus-policy.pdf"])


