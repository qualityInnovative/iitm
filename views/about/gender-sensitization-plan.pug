extends ../layouts/base.pug

block content
    //- include ../layouts/banner.pug

    main.page-layout 
        include ../layouts/pagemenu.pug

        .main
            div
                h1.page-heading Gender Sensitization Plan

                .line-above-heading
                h2.heading-with-top-border Explore

                iframe.pdf-viewer.hidden(src="/data/documents/gender-sensitization-plan.pdf")
                .pdf.margin-top-sm.hidden
                    .pdf__heading
                    .pdf__container
                    .pdf__download
                        a(href="/data/documents/gender-sensitization-plan.pdf" target="_blank")
                            button Download

    script.
        //- Show pdf using pdfJs function defined in base.pug script.(For small devies)
        pdfJs(["/data/documents/gender-sensitization-plan.pdf"])


