extends ../layouts/base.pug

block content
  main.page-layout 
    include ../layouts/pagemenu.pug

    .main
      .org-chart-container
        h1.page-heading Organizational Chart
        
        if orgChart
          //- Display the actual organizational chart data
          .org-chart-content
            .chart-image
              img(
                src=orgChart.image_path 
                alt=orgChart.title
                onerror="this.onerror=null;this.src='/uploads/org-charts/naac_card.jpg'"
              )
            
            .chart-details
              //- h2= orgChart.title
              .description!= orgChart.description.replace(/\n/g, '<br>')
              
              .meta-info
                span Last updated: #{new Date(orgChart.updated_at).toLocaleDateString()}
        
        else
          //- Fallback content when no chart exists
          .no-chart
            i.fas.fa-sitemap
            p No organizational chart available at this time

block styles
  style.
    /* Main Container */
    .org-chart-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0px;
    }
    
    /* Page Heading */
    .page-heading {
      color: #2c3e50;
      font-size: 2rem;
      text-align: center;
     
      padding-bottom: 5px;
      border-bottom: 2px solid #f0f0f0;
    }
    
    /* Chart Content */
    .org-chart-content {
     
      overflow: hidden;
      
    }
    
    /* Image Styles */
    .chart-image {
      text-align: center;
      padding: 0px;
     
     
    }
    
    .chart-image img {
      max-width: 100%;
      height: auto;
      max-height: 600px;
      object-fit: cover;
    }
    
    /* Details Section */
    .chart-details {
      padding: 10px;
    }
    
    .chart-details h2 {
      color: #3498db;
      font-size: 1.5rem;
      margin-bottom: 15px;
      text-align: center;
    }
    
    .description {
      color: #555;
      line-height: 1.7;
      font-size: 1rem;
    }
    
    /* Meta Info */
    .meta-info {
      margin-top: 20px;
      padding-top: 15px;
      border-top: 1px solid #eee;
      color: #777;
      font-size: 0.9rem;
      text-align: right;
    }
    
    /* No Chart Available */
    .no-chart {
      text-align: center;
      padding: 50px 20px;
      background: #f9f9f9;
      border-radius: 8px;
      border: 1px dashed #ddd;
    }
    
    .no-chart i {
      font-size: 3rem;
      color: #95a5a6;
      margin-bottom: 15px;
    }
    
    .no-chart p {
      color: #666;
      font-size: 1.1rem;
    }
    
    /* Responsive Design */
    @media (max-width: 768px) {
      .org-chart-container {
        padding: 0px;
      }
      
      .page-heading {
        font-size: 1.6rem;
      }
      
      .chart-details {
        padding: 15px;
      }
      
      .chart-details h2 {
        font-size: 1.3rem;
      }
    }

