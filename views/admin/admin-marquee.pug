extends ../layouts/cms-base.pug

block styles
  style.
    /* Custom CSS for Marquee Links Management */
    .cms-marquee-links {
      --primary-color: #6366f1;
      --success-color: #10b981;
      --danger-color: #ef4444;
      --text-color: #334155;
      --border-color: #e2e8f0;
    }
    
    .marquee-header {
      border-bottom: 1px solid var(--border-color);
      padding-bottom: 1.5rem;
      margin-bottom: 2rem;
    }
    
    .marquee-title {
      color: var(--primary-color);
      font-weight: 600;
      position: relative;
      padding-left: 1.5rem;
    }
    
    .marquee-title::before {
      content: '';
      position: absolute;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      height: 24px;
      width: 4px;
      background: var(--primary-color);
      border-radius: 2px;
    }
    
    .btn-marquee {
      background: #6366f1;
      color: black;
      border-radius: 8px;
      padding: 0.5rem 1.25rem;
      font-weight: 500;
      transition: all 0.2s ease;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .btn-marquee:hover {
      background: #4f46e5;
      transform: translateY(-1px);
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }
    
    .marquee-table {
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
    }
    
    .marquee-table th {
      background: #f8fafc;
      color: #64748b;
      font-weight: 600;
      text-transform: uppercase;
      font-size: 0.75rem;
      letter-spacing: 0.5px;
      padding: 1rem 1.5rem;
    }
    
    .marquee-table td {
      padding: 1rem 1.5rem;
      vertical-align: middle;
      border-top: 1px solid var(--border-color);
    }
    
    .status-badge {
      padding: 0.35rem 0.75rem;
      border-radius: 9999px;
      font-size: 0.75rem;
      font-weight: 500;
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
    }
    
    .status-badge.active {
      background: rgba(16, 185, 129, 0.1);
      color: var(--success-color);
    }
    
    .status-badge.inactive {
      background: rgba(100, 116, 139, 0.1);
      color: #64748b;
    }
    
    .action-btn {
      border-radius: 6px;
      padding: 0.375rem 0.75rem;
      font-size: 0.875rem;
      display: inline-flex;
      align-items: center;
      gap: 0.375rem;
      transition: all 0.2s ease;
    }
    
    .action-btn.edit {
      background: rgba(99, 102, 241, 0.1);
      color: var(--primary-color);
    }
    
    .action-btn.edit:hover {
      background: rgba(99, 102, 241, 0.2);
    }
    
    .action-btn.delete {
      background: rgba(239, 68, 68, 0.1);
      color: var(--danger-color);
    }
    
    .action-btn.delete:hover {
      background: rgba(239, 68, 68, 0.2);
    }
    
    .empty-state {
      padding: 3rem 2rem;
      text-align: center;
      background: #f8fafc;
      border-radius: 12px;
    }
    
    .empty-state-icon {
      font-size: 3rem;
      color:rgb(5, 117, 255);
      margin-bottom: 1rem;
    }
    
block content
    main(style="min-height: 80vh")
        .cont.cms-marquee-links
            .marquee-header
                .d-flex.justify-content-between.align-items-center
                    h1.marquee-title.mb-0 Marquee Links Management
                    a.btn-marquee(href="/cms/banners/new" title="Add Banner")
                        ion-icon(name="add-outline")
                        | Add New Link
            
            if successMessage
                .alert.alert-success.alert-dismissible.fade.show(role="alert")
                    ion-icon(name="checkmark-circle" style="margin-right: 0.5rem")
                    | #{successMessage}
                    button.btn-close(type="button" data-bs-dismiss="alert" aria-label="Close")
            
            if errorMessage
                .alert.alert-danger.alert-dismissible.fade.show(role="alert")
                    ion-icon(name="close-circle" style="margin-right: 0.5rem")
                    | #{errorMessage}
                    button.btn-close(type="button" data-bs-dismiss="alert" aria-label="Close")

            if links && links.length > 0
                .marquee-table
                    .table-responsive
                        table.table.mb-0
                            thead
                                tr
                                    th(scope="col") #
                                    th(scope="col") Text
                                    th(scope="col") URL
                                    th(scope="col") Title
                                    th(scope="col") Priority
                                    th(scope="col") Status
                                    th(scope="col") Actions
                            tbody#sortable
                                each link, index in links
                                    tr(data-id=link.id)
                                        th(scope="row")= index + 1
                                        td.fw-semibold= link.text
                                        td
                                            a(href=link.url target="_blank" style="color: var(--primary-color)")= link.url
                                        td.text-muted= link.title || '-'
                                        td= link.priority
                                        td
                                            span.status-badge(class=link.is_active ? 'active' : 'inactive')
                                                ion-icon(name=link.is_active ? 'checkmark-circle' : 'close-circle')
                                                = link.is_active ? 'Active' : 'Inactive'
                                        td
                                            .d-flex.gap-2
                                                a.action-btn.edit(href=`/cms/marquee-links/edit/${link.id}`)
                                                    ion-icon(name="create-outline")
                                                    | Edit
                                                form(method="POST" action=`/cms/marquee-links/delete/${link.id}` onsubmit="return confirm('Are you sure you want to delete this link?')")
                                                    button.action-btn.delete(type="submit")
                                                        ion-icon(name="trash-outline")
                                                        | Delete
            else
                .empty-state
                    ion-icon.empty-state-icon(name="link-outline")
                    h5.text-muted.mb-3 No marquee links found
                    a.btn-marquee.floating-add-banner(href="/cms/banners/new" title="Add Banner")
                        ion-icon(name="add-outline")
                        | Add Your First Link

block scripts
    script(src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js")
    script.
        document.addEventListener('DOMContentLoaded', function() {
            const sortableEl = document.getElementById('sortable');
            if (sortableEl) {
                new Sortable(sortableEl, {
                    animation: 150,
                    ghostClass: 'bg-light',
                    onEnd: function() {
                        const rows = sortableEl.querySelectorAll('tr');
                        const sortedData = Array.from(rows).map((row, index) => ({
                            id: row.dataset.id,
                            priority: index + 1
                        }));
                        
                        fetch('/cms/marquee-links/update-priority', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({ links: sortedData })
                        }).then(response => response.json())
                          .then(data => {
                              if (!data.success) {
                                  console.error('Failed to update priorities');
                              }
                        });
                    }
                });
            }
        });