extends ../layouts/cms-base.pug

block styles
  style.
    :root {
      --primary: #4f46e5;
      --primary-light: #818cf8;
      --primary-dark: #3730a3;
      --secondary: #64748b;
      --success: #10b981;
      --success-light: #34d399;
      --warning: #f59e0b;
      --danger: #ef4444;
      --light: #f8fafc;
      --dark: #0f172a;
      --border: #e2e8f0;
      --card-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05);
    }

    .cms-aqar-layout {
      min-height: 80vh;
      background-color: #f1f5f9;
      padding: 2rem 0;
    }

    .aqar-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }

    /* Header Styles */
    .aqar-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
      padding-bottom: 1.5rem;
      border-bottom: 1px solid var(--border);
    }

    .aqar-title {
      position: relative;
      font-size: 1.75rem;
      font-weight: 700;
      color: var(--dark);
      padding-left: 1.75rem;
    }

    .aqar-title::before {
      content: '';
      position: absolute;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      height: 28px;
      width: 5px;
      background: var(--primary);
      border-radius: 3px;
    }

    /* Button Styles */
    .btn-aqar {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      background: var(--primary);
      color: white;
      border-radius: 8px;
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      transition: all 0.3s ease;
      text-decoration: none;
      box-shadow: 0 4px 6px rgba(79, 70, 229, 0.2);
      border: none;
      cursor: pointer;
    }

    .btn-aqar:hover {
      background: var(--primary-dark);
      transform: translateY(-2px);
      box-shadow: 0 6px 12px rgba(79, 70, 229, 0.25);
    }

    .btn-aqar ion-icon {
      font-size: 1.25rem;
    }

    /* Alert Styles */
    .alert {
      padding: 1rem 1.5rem;
      border-radius: 8px;
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      gap: 0.75rem;
      box-shadow: var(--card-shadow);
    }

    .alert-success {
      background: #f0fdf4;
      border: 1px solid #bbf7d0;
      color: #166534;
    }

    .alert-danger {
      background: #fef2f2;
      border: 1px solid #fecaca;
      color: #b91c1c;
    }

    .alert ion-icon {
      font-size: 1.5rem;
    }

    .btn-close {
      margin-left: auto;
      background: none;
      border: none;
      color: inherit;
      cursor: pointer;
      font-size: 1.25rem;
      opacity: 0.7;
      transition: opacity 0.2s;
    }

    .btn-close:hover {
      opacity: 1;
    }

    /* Table Styles */
    .aqar-table-container {
      background: white;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: var(--card-shadow);
      overflow-x: auto;
    }

    .aqar-table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
      min-width: 800px;
    }

    .aqar-table th {
      background: var(--light);
      color: var(--secondary);
      font-weight: 600;
      text-transform: uppercase;
      font-size: 0.8rem;
      letter-spacing: 0.5px;
      padding: 1.25rem 1.5rem;
      text-align: left;
      border-bottom: 1px solid var(--border);
    }

    .aqar-table th:first-child {
      border-radius: 12px 0 0 0;
    }

    .aqar-table th:last-child {
      border-radius: 0 12px 0 0;
    }

    .aqar-table td {
      padding: 1.25rem 1.5rem;
      vertical-align: middle;
      border-bottom: 1px solid var(--border);
      color: var(--dark);
    }

    .aqar-table tbody tr {
      transition: background 0.2s ease;
    }

    .aqar-table tbody tr:hover {
      background: #f8fafc;
    }

    .aqar-table tbody tr:last-child td {
      border-bottom: none;
    }

    .action-cell {
      display: flex;
      gap: 0.75rem;
    }

    .action-btn {
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      font-weight: 500;
      font-size: 0.875rem;
      text-decoration: none;
      transition: all 0.2s ease;
    }

    .edit-btn {
      background: #eef2ff;
      color: var(--primary);
      border: 1px solid #e0e7ff;
    }

    .edit-btn:hover {
      background: #e0e7ff;
    }

    /* Empty State */
    .empty-state {
      padding: 3rem 2rem;
      text-align: center;
      background: white;
      border-radius: 12px;
      box-shadow: var(--card-shadow);
    }

    .empty-state-icon {
      font-size: 3.5rem;
      color: #cbd5e1;
      margin-bottom: 1.5rem;
    }

    .empty-state-title {
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--dark);
      margin-bottom: 0.5rem;
    }

    .empty-state-text {
      color: var(--secondary);
      margin-bottom: 1.5rem;
      max-width: 500px;
      margin-left: auto;
      margin-right: auto;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .aqar-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
      }
      
      .aqar-title {
        font-size: 1.5rem;
        padding-left: 1.5rem;
      }
      
      .btn-aqar {
        width: 100%;
        justify-content: center;
      }
      
      .action-cell {
        flex-direction: column;
        gap: 0.5rem;
      }
      
      .action-btn {
        width: 100%;
        justify-content: center;
      }
    }

block content
  main.cms-aqar-layout
    .aqar-container
      .aqar-header
        h1.aqar-title AQAR Dashboard
        a.btn-aqar(href="/cms/admin-aqar/add-year")
          ion-icon(name="add-outline")
          | Add AQAR

      if successMessage
        .alert.alert-success
          ion-icon(name="checkmark-circle")
          span #{successMessage}
          button.btn-close(type="button") &times;

      if errorMessage
        .alert.alert-danger
          ion-icon(name="close-circle")
          span #{errorMessage}
          button.btn-close(type="button") &times;

      if aqarList && aqarList.length > 0
        .aqar-table-container
          table.aqar-table
            thead
              tr
                th #
                th Year
                th Title
                th Description
                th Actions
            tbody
              each aqar, index in aqarList
                tr
                  td(style="font-weight: 500") #{index + 1}
                  td(style="font-weight: 600; color: var(--primary)") #{aqar.year_label}
                  td #{aqar.title}
                  td(style="color: var(--secondary)") #{aqar.description || '-'}
                  td.action-cell
                    a.action-btn.edit-btn(href=`/cms/admin-aqar/edit-year/${aqar.id}`)
                      ion-icon(name="create-outline")
                      | Edit

      else
        .empty-state
          ion-icon.empty-state-icon(name="document-outline")
          h5.empty-state-title No AQAR entries found
          p.empty-state-text Get started by adding your first AQAR entry
          a.btn-aqar(href="/cms/admin-aqar/add-year")
            ion-icon(name="add-outline")
            | Add Your First AQAR